[Unit]
Description=Sirius Backend API Service
After=network.target postgresql.service

[Service]
Type=simple
User=www-data
WorkingDirectory=/path/to/sirius-web-lp-cursor/backend
Environment="PATH=/path/to/sirius-web-lp-cursor/backend/venv/bin"
EnvironmentFile=/path/to/sirius-web-lp-cursor/backend/.env
ExecStart=/path/to/sirius-web-lp-cursor/backend/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8009
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

