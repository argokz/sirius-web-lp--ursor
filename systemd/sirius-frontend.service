[Unit]
Description=Sirius Frontend Nuxt Service
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/path/to/sirius-web-lp-cursor/frontend
Environment="NODE_ENV=production"
Environment="PORT=3006"
ExecStart=/usr/bin/node /path/to/sirius-web-lp-cursor/frontend/.output/server/index.mjs
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

